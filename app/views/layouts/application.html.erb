<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Alan's Blog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Oswald:200,300,400' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Open+Sans' %>
    <%= javascript_include_tag 'application' %>
</head>
<body>
  <nav class="navbar navbar-toggleable-md navbar-dark bg-inverse fixed-top">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerMyNavBar" aria-controls="navbarTogglerMyNavBar" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fa fa-bars" aria-hidden="true"></i>
    </button>
    <a class="navbar-brand" href="#">
      <img class="brand-icon-img" src="<%= asset_path('nav-brand.svg') %>" alt="brand icon"> <span>Blogging</span>
    </a>
    <div class="collapse navbar-collapse" id="navbarTogglerMyNavBar">
      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="mailto:alanlo893@gmail.com">Contact</a>
        </li>
        <li class="nav-item">
          <%= link_to "New Post", new_post_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Explore", posts_path, class: "nav-link" %>
        </li>
        <%if (user_signed_in?)%>
          <li class="nav-item">
            <%= link_to "Favorites",user_likes_path(current_user), class: "nav-link"%>
          </li>
        <% end%>
        <li class="nav-item">
          <hr>
        </li>
      </ul>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <span>Welcome, <%= link_to edit_user_path(session[:user_id]), class: "nav-link" do %>
              <%=current_user.first_name%><% end %><span class="bar">|</span> </span>
          </li>
          <li class="nav-item">
            <%= link_to "Sign out", sessions_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <%= link_to "Sign up", new_user_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_session_path, class: "nav-link" %>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
  <%= yield %>
  <footer>
    <div class="row">
      <div class="offset-md-2 col-md-8">
        <div class="d-flex flex-row justify-content-center font-size-1 social-icons">
          <i class="fa fa-envelope-o" aria-hidden="true"></i>
          <i class="fa fa-facebook" aria-hidden="true"></i>
          <i class="fa fa-instagram" aria-hidden="true"></i>
          <i class="fa fa-medium" aria-hidden="true"></i>
          <i class="fa fa-twitter" aria-hidden="true"></i>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="offset-md-2 col-md-8">
        <div class="d-flex flex-row justify-content-center align-items-center copyright-info">
         <i class="fa fa-copyright"></i> 2017. Designed and built by Alan Lo
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
