<%= render partial: 'form_header'%>
  <%= form_for @user,  url: password_reset_path(params[:id]) do |f| %>
    <div class="form-group row align-items-center">
      <%= f.label :newpassword, "New Password:", class: "pl-3-0 col-4 col-form-label font-size-1.5" %>
        <div class="col-5">
          <%= f.password_field :newpassword, class: "form-control"%>
        </div>
    </div>
      <div class="form-group row align-items-center">
        <%= f.label :confirm, "Confirmation:", class: "pl-3-0 col-4 col-form-label font-size-1.5" %>
        <div class="col-5">
          <%= f.password_field :confirm, class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.submit 'Submit', class: "btn btn-primary"%>
      </div>
      <div class="row">
        <div class="col">
          <span class="error font-size-1.5"><%=  flash[:error] %></span>
        </div>
      </div>
  <% end %>
<%= render partial: 'form_footer'%>
