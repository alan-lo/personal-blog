<%= render partial: 'form_header'%>
  <%= form_for @user , :url => { :controller => "password_resets", :action => "create"} do |f| %>
    <div class="form-group row align-items-center">
      <%= f.label :email, "Enter your Email:", class: "pl-3-0 col-4 col-form-label font-size-1.5" %>
      <div class="col-5">
        <%= f.email_field :email, class: "form-control"%>
      </div>
    </div>
      <div class="form-group row">
        <%= f.submit 'Submit', class: "btn btn-primary"%>
      </div>
      <div class="row">
        <div class="col">
          <span class="error font-size-1.5"><%=  flash[:error] %></span>
        </div>
      </div>
  <% end %>
<%= render partial: 'form_footer'%>
