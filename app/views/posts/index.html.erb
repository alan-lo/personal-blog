
<div class="container-fluid mt-3-75">
  <div class="row">
    <div class="col-md-4 push-md-8">
      <div class="hidden-sm-down most-like">
        <h2><i class="fa fa-star"></i> Most Popular</h2>
          <% @most_liked.each_with_index do |l, index| %>
            <div class="row ml-3-0 mr-3-0">
              <div class="col-lg-6"><%= link_to l.title, post_path(l)%></div>
              <div class="col-lg-6"><span><%= pluralize(l.likes.count, 'Like')%></span>
              </div>
            </div>
          <% end %>
      </div>
    </div>
    <% @posts.each_with_index do |p, index| %>
      <% if index == 0 %>
        <div class="col-xs-12 col-md-8 pull-md-4 mb-3-35">
          <img class="img-fluid" src="<%=p.image.url%>" alt="image">
          <div class="d-flex flex-row justify-content-between align-items-center font-size-1.5 mb-3-20">
            <div>
              <% if p.likes.count >0 %>
                <i class="fa fa-heart" aria-hidden="true"></i>
              <% else %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
              <% end %>
              <span><%= p.likes.count %></span>
            </div>
            <i class="fa fa-bookmark-o" aria-hidden="true"></i>
          </div>
          <h2>
            <%= link_to p.title, post_path(p) %></h2>
          <p class="post-body">
            <%= p.body %>
          </p>
          <div>
            <h4><%= p.user.first_name %> <%= p.user.last_name %></h4>
          </div>
          <div>
            <h4>
              <%= p.created_at.strftime("%Y-%m-%d") %>
            </h4>
          </div>
        </div>
        <% else %>
          <div class="col-xs-12 col-md-4 mb-3-35">
            <div class="post-img" style="background-image: url('<%=p.image.medium.url%>')">
              <!-- <img class="img-fluid" src="<%=p.image.url%>" alt="image"> -->
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center font-size-1.5 mb-3-20">
              <div>
                <% if p.likes.count >0 %>
                  <i class="fa fa-heart" aria-hidden="true"></i>
                <% else %>
                  <i class="fa fa-heart-o" aria-hidden="true"></i>
                <% end %>
                <span><%= p.likes.count %></span>
              </div>
              <i class="fa fa-bookmark-o" aria-hidden="true"></i>
            </div>
            <h2><%= link_to p.title, post_path(p) %></h2>

            <div class="post-info-lo post-info-skin">
              <h5>By <%= p.user.first_name %> <%= p.user.last_name %></h5>
              <h5><%= p.created_at.strftime("%Y-%m-%d") %></h5>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
