<div class="post-container container-fluid mt-3-75">
  <div class="row">
    <div class="col-md-4 push-md-8">
      <div class="hidden-sm-down most-like">
        <h2><i class="fa fa-star"></i> Most Popular</h2>
        <div id="popular-posts" class="row">
          <% @most_liked.each_with_index do |l, index| %>
          <div class="col-6" >
            <%= link_to post_path(l) do %>
            <div class="img-wrapper small" style="background-image: url('<%= l.image.medium.url%>')">
              <div class="overlay">
                <div class="overlay-content small"><i class="fa fa-heart"></i>  <%= pluralize(l.likes.count, 'Like')%> </div>
              </div>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <% @posts.each_with_index do |p, index| %>
      <% if index == 0 %>
        <div class="col-xs-12 col-md-8 pull-md-4 mb-3-35">
          <div class="post-first-img" style="background-image: url('<%= p.image.url%>')">
            <%= link_to post_path(p) do %>
            <div class="overlay-first-img post-first-img">
              <div class="d-flex flex-column align-items-start justify-content-center overlay-content first-img">
                <div class="post-first-title">
                    <%= p.title %>
                </div>
                <div class="post-first-info">
                  <i class="fa fa-clock-o" aria-hidden="true"></i>
                  <div class="post-first-date">
                    <%= p.created_at.strftime("%Y-%m-%d") %>
                  </div>
                  <i class="fa fa-heart post-first" aria-hidden="true"></i>
                  <div class="post-first-likes">
                    <%= pluralize(p.likes.count, 'Like')%>
                  </div>
                  <i class="fa fa-comments" aria-hidden="true"></i>
                  <div class="post-first-comments">
                    <%= pluralize(p.comments.count, 'Comment')%>
                  </div>
                  </div>
                  <div class="post-author first-post">By <%= p.user.first_name %> <%= p.user.last_name %></div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        <% else %>
          <div class="col-xs-12 col-md-4 mb-3-35">
            <%= link_to post_path(p) do %>
            <div class="img-wrapper" style="background-image: url('<%=p.image.medium.url%>')">
              <div class="overlay">
                <div class="overlay-content"><i class="fa fa-search"></i></div>
              </div>
            </div>
            <% end %>
            <div class="d-flex flex-row justify-content-between align-items-center font-size-1.5 mb-3-20">
              <div class="d-flex flex-row align-items-center">
                <% if p.likes.count > 0 %>
                  <i class="fa fa-heart" aria-hidden="true"></i>
                <% else %>
                  <i class="fa fa-heart-o" aria-hidden="true"></i>
                <% end %>
                <span><%= p.likes.count %></span>
              </div>
              <h5 class="post-author">By <%= p.user.first_name %> <%= p.user.last_name %></h5>
            </div>
            <h2><%= p.title%></h2>
            <div class="post-info d-flex flex-row justify-content-between">
              <h5><%= p.created_at.strftime("%Y-%m-%d") %></h5>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
