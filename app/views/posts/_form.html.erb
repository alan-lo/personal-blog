<%= form_for @post do |f| %>
  <div class="form-group row align-items-center">
    <%= f.label :title, "Title", class: "pl-3-0 col-2 col-form-label font-size-1.5" %>
      <div class="col-10">
        <%= f.text_field :title, placeholder: "< Title >", class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <%= f.label :body, "Body", class: "col-form-label font-size-1.5" %>
    <%= f.text_area :body,placeholder: "< Post Body>", class: "form-control" %>
  </div>
  <div class="form-group row">
    <div class="col pl-3-0">
      <%= f.file_field :image, class: "col-form-label"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col pl-3-0">
      <%= f.collection_select(:category_id, Category.all, :id, :name, {class: "form-control"})%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit button, class: "btn btn-primary"%>
  </div>
  <div class="row">
    <div class="col">
      <%=  @post.errors.full_messages.join(', ')%>
    </div>
  </div>
<% end %>
